{
  "info": {
    "name": "Ecommerce API Practice",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "health"
          ]
        }
      }
    },
    {
      "name": "Create Category",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Electronics\",\n  \"description\": \"Devices and accessories\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/categories",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "categories"
          ]
        }
      }
    },
    {
      "name": "Create Product",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Wireless Mouse\",\n  \"description\": \"Simple mouse\",\n  \"price\": 20,\n  \"stock\": 10,\n  \"category\": \"{{categoryId}}\",\n  \"isActive\": true\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/products",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "products"
          ]
        }
      }
    },
    {
      "name": "Create Customer",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"firstName\": \"Ana\",\n  \"lastName\": \"Lopez\",\n  \"email\": \"ana.lopez@example.com\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/customers",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "customers"
          ]
        }
      }
    },
    {
      "name": "Create Order",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"customer\": \"{{customerId}}\",\n  \"items\": [\n    {\n      \"product\": \"{{productId}}\",\n      \"quantity\": 2\n    }\n  ]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/orders",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "orders"
          ]
        }
      }
    },
    {
      "name": "List Products with Filters",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/products?category={{categoryId}}&minPrice=10&maxPrice=100&page=1&limit=5&sortPrice=asc",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "products"
          ],
          "query": [
            {
              "key": "category",
              "value": "{{categoryId}}"
            },
            {
              "key": "minPrice",
              "value": "10"
            },
            {
              "key": "maxPrice",
              "value": "100"
            },
            {
              "key": "page",
              "value": "1"
            },
            {
              "key": "limit",
              "value": "5"
            },
            {
              "key": "sortPrice",
              "value": "asc"
            }
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api"
    },
    {
      "key": "categoryId",
      "value": ""
    },
    {
      "key": "productId",
      "value": ""
    },
    {
      "key": "customerId",
      "value": ""
    }
  ]
}
